

#include <stdio.h>
#include <stdlib.h>


int f(int n) {
    if (n==1)
    return 2;
    else {
        return 3 * (n-1) + f(n-1);
    }
    
}

int g(int n) {
    if (n==1 || n==2)
    return 1;
    else { 
        return 4*g(n-1)+3*g(n-2);
}
        
    }

// H(n) = 7 * h(n-1);

int h(int n) 
{
    
    int result = 1;
    
    while (n > 0)
    {
        result *= 7;
        
        n -= 1;
    }

    return result;
} 


 int i(int n)
{
    int f0 = 0;
    int f1 = 1;

    for (int i = 2; i <= n; i++)
    {
        int f2 = f0 + f1;
        f0 = f1;
        f1 = f2;
    }

    return f0;
}




int main () {
    
int a,b,c,d,resultado;
/* resultado = 2 * f(b) +5 * g(a) -3 * h(d) +7 * i(c); */

    int numeroNegativo = 0;
    
   /* printf("\n\n digite 4 números inteiros não negativo \n\n");
     scanf("%d%d%d%d",&a,&b,&c,&d);
     */
    
    while (1) {
        
        printf("\n\n digite 4 números inteiros não negativo \n\n");
        scanf("%d%d%d%d",&a,&b,&c,&d);
         if (a >= 0 && b >= 0 && c >= 0 && d >= 0 ) {
            break;
         
         }
    }
   
  resultado = 2 * f(b) +5 * g(a) -3 * h(d) +7 * i(c);
 
    
    printf(" \n\n Utilizando os valores de a = %d ,b = %d ,c= %d, d= %d, temos o resultado = %d",a,b,c,d,resultado);
    
    
} 
